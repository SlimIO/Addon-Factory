{
    "opts": {
        "encoding": "utf8",
        "destination": "./docs/",
        "recurse": true,
        "template": "node_modules/@escommunity/minami"
    },
    "source": {
        "include": [
            "index.js",
            "./src/addonFactory.js",
            "./src/callbackFactory.js",
            "./src/componentFactory.js",
            "./src/components/message.js"
        ],
        "exclude": [
            "node_modules",
            "client"
        ],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    }
}
